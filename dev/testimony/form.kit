<section class="container" id="form">
  <div>
    <h1>Have your own thoughts?</h1>
    <p>Leave a comment and you may be featured next!</p>
    <form class="subscribeForm" name="Subscription Form" method="post" action="mailto:helen.burgess@central.wa.edu.au" enctype="text/plain">

      <input id="fname" type="text" placeholder="Name" Name="Name" required>
      <!-- Step 1: Add an email field here -->
      <input id="email" type="email" placeholder="Email" name="Email" required>
      <!-- Step 2: Add an address field here -->
      <input id="address" type="message" placeholder="Message" name="Message">
      <!-- Step 3: add a submit button here -->
      <input id="submit" type="submit" value="Submit">

    </form>
  </div>
  <aside>
    <img src="img/testimony/budlight-form.png" alt="budlight">
  </aside>
</section>
